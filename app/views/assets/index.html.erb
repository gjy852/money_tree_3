<div class="page-header">
  <h1>
    Assets
    <a href="/assets/new" class="btn btn-lg btn-success">New Asset</a>
  </h1>
</div><div class="row mb-1">
  <div class="col-md-12">
    <%= search_form_for @q, :class => "collapse", :id => "assets_filters" do |f| %>
      <p class="lead">Narrow results:</p>

        <div class="form-group">
  <%= f.label :user_id, "User" %>
  <div class="row">
    <div class='col-md-6 mb-1'>
      <%= f.text_field :user_id_gteq, :class => "form-control", :placeholder => "User greater than or equal to" %>
    </div>
    <div class='col-md-6'>
      <%= f.text_field :user_id_lteq, :class => "form-control", :placeholder => "User less than or equal to" %>
    </div>
  </div>
</div>

<div class="form-group">
    <%= f.label :asset_value_cont, "Asset value contains" %>
    <%= f.text_field :asset_value_cont, :class => "form-control", :placeholder => "Asset value contains" %>
  </div>

<div class="form-group">
          <%= f.label :created_at, "Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='created_atgteqPicker'>
                  <%= f.text_field :created_at_gteq, :class => "form-control", :placeholder => "Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='created_atlteqPicker'>
                  <%= f.text_field :created_at_lteq, :class => "form-control", :placeholder => "Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#created_atgteqPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atlteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atgteqPicker').on("dp.change", function (e) {
                  $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#created_atlteqPicker').on("dp.change", function (e) {
                  $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

        <div class="form-group">
  <%= f.label :liabilities_id, "NetWorth Liabilities" %>
  <div class="row">
    <div class='col-md-6 mb-1'>
      <%= f.text_field :net_worth_liabilities_id_gteq, :class => "form-control", :placeholder => "NetWorth Liabilities greater than or equal to" %>
    </div>
    <div class='col-md-6'>
      <%= f.text_field :net_worth_liabilities_id_lteq, :class => "form-control", :placeholder => "NetWorth Liabilities less than or equal to" %>
    </div>
  </div>
</div>

<div class="form-group">
      <%= f.label :asset_type_name_cont, "AssetType name contains" %>
      <%= f.text_field :asset_type_name_cont, :class => "form-control", :placeholder => "AssetType name contains" %>
    </div>

      <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

      <a href="/assets" class="btn btn-default btn-block mb-1">Clear filters</a>
    <% end %>
    <a class="btn btn-default btn-block mb-1" data-toggle="collapse" href="#assets_filters">
      Show Filters
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Asset type</th>
        <th>Asset value</th>
        <th>User</th>
        <th>Net worth</th>
        <th>Actions</th>
      </tr>

      <% @assets.each do |asset| %>
      <tr>
        <td>
          <% if asset.asset_type.present? %>
            <a href="/asset_types/<%= asset.asset_type.id %>">
              <%= asset.asset_type.name %>
            </a>
          <% end %>
        </td>
        <td><%= asset.asset_value %></td>
        <td><%= asset.user_id %></td>
        <td>
          <% if asset.net_worth.present? %>
            <a href="/net_worths/<%= asset.net_worth.id %>">
              <%= asset.net_worth.user_id %>
            </a>
          <% end %>
        </td>
        <td>
          <a href="/assets/<%= asset.id %>" class="btn btn-primary">Show</a>
          <a href="/assets/<%= asset.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_asset/<%= asset.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @assets, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
