<div class="page-header">
  <h1>
    Liability types
    <a href="/liability_types/new" class="btn btn-lg btn-success">New Liability type</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th>Actions</th>
      </tr>

      <% @liability_types.each do |liability_type| %>
      <tr>
        <td><%= liability_type.name %></td>
        <td>
          <a href="/liability_types/<%= liability_type.id %>" class="btn btn-primary">Show</a>
          <a href="/liability_types/<%= liability_type.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_liability_type/<%= liability_type.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @liability_types, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
