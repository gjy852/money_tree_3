<!-- Validation failure messages -->
<% if @liability.errors.any? %>
  <% @liability.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Liability #<%= @liability.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_liability/<%= @liability.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for liabilities_type_id -->
      <div class="form-group">
        <label for="liabilities_type_id" class="control-label">
          Liabilities type
        </label>

        <%= select_tag(:liabilities_type_id, options_from_collection_for_select(LiabilityType.all, :id, :name, @liability.liabilities_type_id), :class => "form-control") %>
      </div>

      <!-- Label and input for liabilities_value -->
      <div class="form-group">
        <label for="liabilities_value" class="control-label">
          Liabilities value
        </label>

        <input type="text" id="liabilities_value" name="liabilities_value" placeholder="Liabilities value" class="form-control" value="<%= @liability.liabilities_value %>">
      </div>

      <!-- Label and input for net_worth_id -->
      <div class="form-group">
        <label for="net_worth_id" class="control-label">
          Net worth
        </label>

        <%= select_tag(:net_worth_id, options_from_collection_for_select(NetWorth.all, :id, :liabilities_id, @liability.net_worth_id), :class => "form-control") %>
      </div>

      <!-- Label and input for user_id -->
      <div class="form-group">
        <label for="user_id" class="control-label">
          User
        </label>

        <input type="text" id="user_id" name="user_id" placeholder="User" class="form-control" value="<%= @liability.user_id %>">
      </div>

      <button class="btn btn-warning">
        Update Liability
      </button>
      or
      <a href="/liabilities/<%= @liability.id %>">Cancel</a>
    </form>
  </div>
</div>
