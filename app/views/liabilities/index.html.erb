<div class="page-header">
  <h1>
    My Liabilities
    </h1>
  </div>

  <div class="row mt-2 mb-1">
    <div class="col-md-6">
      <div class="row">
        <div class="col-md-12">
          <ul class="list-group">
            <li class="list-group-item list-group-item-info">
              <h3>Liability Summary $<%= @calculate_liability_total %> </h3>
            </li>
            <% @liabilities.each do |liability| %>
            <li class="list-group-item">
              <%= liability.liabilities_type.name %>
              $<%= liability.liabilities_value %></td>
              <div class="btn-group btn-group-xs pull-right">
                <a href="/liabilities/<%= liability.id %>/edit" class="btn btn-warning">
                  <i class="fa fa-edit"></i>
                </a>
                <a href="/delete_liability/<%= liability.id %>" class="btn btn-danger" rel="nofollow">
                  <i class="fa fa-trash-o"></i>
                </a>
              </div>
            </li>
            <% end %>

<hr>

<div class = "row">
  <a href="/liabilities/new" class="btn btn-md btn-success">Create a New Liability</a>
  <a href="/net_worths/2" class="btn btn-md btn-default">What is my Net Worth?</a>
  </div>

    <%= paginate @liabilities, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
